<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.iiitd.apurupa.mcassignment.erickshawdriver.NotificationActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textStyle="italic"
        android:text="RIDE REQUEST"
        android:id="@+id/notifcationtextView"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/desttitletextView" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="FROM:"
        android:textStyle="bold"
        android:id="@+id/fromtextView"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:text="FROM:"
        android:id="@+id/usertextView"
        android:layout_below="@+id/pickuptitletextView"
        android:layout_alignParentEnd="true" />
    <TextView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="PICK UP"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:id="@+id/pickuptitletextView"
        android:layout_above="@+id/fromtextView"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/pickuptextView"
        android:layout_alignTop="@+id/pickuptitletextView"
        android:layout_alignEnd="@+id/usertextView" />
    <TextView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="DESTINATION"
        android:textStyle="bold"
        android:id="@+id/desttitletextView"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/pickuptitletextView" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/desttextView"

        android:layout_alignParentEnd="true"
        android:layout_below="@+id/notifcationtextView"
         />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#f57846"
        android:text="ACCEPT"
        android:textStyle="bold"
        android:id="@+id/acceptRequestButton"
        android:layout_below="@+id/fromtextView"
        android:layout_toStartOf="@+id/usertextView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#f57846"
        android:text="FINISH RIDE"
        android:textStyle="bold"
        android:visibility="invisible"
        android:id="@+id/finishRideButton"
        android:layout_below="@+id/acceptRequestButton"
        android:layout_alignStart="@+id/acceptRequestButton"
        android:layout_marginTop="45dp" />

</RelativeLayout>
