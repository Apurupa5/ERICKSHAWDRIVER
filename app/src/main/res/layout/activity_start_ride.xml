<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
<fragment xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="400dp"
    android:layout_height="450dp"
    tools:context="com.iiitd.apurupa.mcassignment.erickshawdriver.StartRideActivity"
    />
<LinearLayout
android:layout_width="323dp"
android:layout_height="35dp"
android:weightSum="1">
<Button

    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:gravity="center"
    android:text="Start Ride"
    android:id="@+id/startride_button"
    android:layout_gravity="right"
    android:background="#f57846"
    android:onClick="startride" />
    <Button

        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Stop Ride"
        android:id="@+id/stopride_button"
        android:layout_gravity="right"
        android:background="#f57846"
        android:onClick="stopride" />
</LinearLayout>

</LinearLayout>
